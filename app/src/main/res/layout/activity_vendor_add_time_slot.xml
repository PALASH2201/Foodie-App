<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/light_orange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vendor_addTimeSlot">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_border"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Time Slots"
                android:fontFamily="@font/epilogue_semibold"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Select day:"
                android:fontFamily="@font/epilogue_semibold"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/day_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/epilogue_semibold"
                android:text="Time slot:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/slot_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/epilogue_semibold"
                android:text="Available slots:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/availableSlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter number of slots"
                android:inputType="number"
                android:fontFamily="@font/epilogue_semibold"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/same_time_everyday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/epilogue_semibold"
                android:text="Same time slot every day" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_slot_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/orange"
                    android:text="Add Slot"
                    android:fontFamily="@font/epilogue_semibold"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>