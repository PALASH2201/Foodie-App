<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView
    style="@style/Widget.Neumorph.CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:neumorph_shadowColorDark="@color/orange"
    app:neumorph_shapeType="flat"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/light_orange">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="124dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="54dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@drawable/btn_rounded_corner" />

        <TextView
            android:id="@+id/recName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="98dp"
            android:layout_toEndOf="@id/recImage"
            android:fontFamily="@font/cinzel_decorative_bold"
            android:text="Name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="211dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/orange_btn_color"
            android:text="Edit"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/ccp_padding"
            app:iconTint="@color/orange" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="189dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/orange_btn_color"
            android:text="Delete"
            android:textColor="@color/black"
            app:cornerRadius="@dimen/ccp_padding" />

    </RelativeLayout>
</soup.neumorphism.NeumorphCardView>