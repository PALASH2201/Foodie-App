<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.2"
                android:fontFamily="@font/bangers"
                android:text="@string/app_name"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- App Version -->
            <TextView
                android:id="@+id/text_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/versionInfo"
                android:textSize="16sp" />

            <!-- App Description -->
            <TextView
                android:id="@+id/text_app_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:letterSpacing="0.1"
                android:text="@string/app_description"
                android:fontFamily="@font/andika_new_basic_bold_italic"
                android:textSize="16sp" />

            <!-- Developer/Organization Information -->
            <TextView
                android:id="@+id/text_developer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/developer_information"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- App Logo or Icon -->

            <!-- Team Member 1 -->
            <TextView
                android:id="@+id/text_team_member1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/developerName"
                android:textColor="@color/dark_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_team_member1_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/DevEmail"
                android:textSize="16sp" />


            <!-- Team Member 2 -->
            <TextView
                android:id="@+id/text_team_member2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/designerName2"
                android:textColor="@color/dark_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_team_member2_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Email: aadit.jha22@spit.ac.in"
                android:textSize="16sp" />


            <!-- Team Member 3 -->
            <TextView
                android:id="@+id/text_team_member3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/designerName1"
                android:textColor="@color/dark_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_team_member3_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Email: yash.kambli22@spit.ac.in"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
